# =============================================================================
# ADDITIONAL SETTINGS
# =============================================================================

# Confirmation settings
confirmation=yes
recurrence.confirmation=yes

# Search settings
search.case.sensitive=no

# Display settings
fontunderline=on
rule.precedence.color=deleted,completed,active,keyword.,tag.,project.,overdue,scheduled,due.today,due,blocked,blocking,recurring,tagged,uda.

# Weekly starts on Monday
weekstart=monday

# =============================================================================
# CUSTOM REPORTS
# =============================================================================

# Context-aware next report
report.next.labels=ID,Active,Age,Deps,P,Project,Tag,Recur,S,Due,Until,Description,Urg
report.next.columns=id,start.age,entry.age,depends,priority,project,tags,recur,scheduled.countdown,due.relative,until.remaining,description,urgency
report.next.filter=status:pending limit:page
report.next.sort=urgency-

# Reading tasks report
report.reading.description=Reading tasks across all domains
report.reading.columns=id,priority,project,tags,description,due
report.reading.labels=ID,Pri,Project,Tags,Description,Due
report.reading.filter=status:pending and +reading
report.reading.sort=urgency-

# Study report for academic contexts
report.study.description=All academic study tasks
report.study.columns=id,priority,project,tags,description,due
report.study.labels=ID,Pri,Project,Tags,Description,Due
report.study.filter=status:pending and (+ai or +math or +statml or +reading.ai or +reading.math or +reading.statml)
report.study.sort=urgency-
