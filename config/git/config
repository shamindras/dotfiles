[github]
    user = shamindras
[init]
    defaultBranch = main
[color]
    ui = true
[core]
    editor = vim
    excludesfile = ~/.config/git/ignore
    pager = delta
[web]
	browser = firefox
[diff]
	colorMoved = default
[merge]
	conflictstyle = diff3
	tool = vimdiff
[mergetool]
	path = vim
[interactive]
    diffFilter = delta --color-only --features=interactive
[include]
    # delta themes
    # source: https://dandavison.github.io/delta/custom-themes.html
    path = ~/.config/delta/themes.gitconfig
[delta]
    features = catppuccin-mocha # delta theme
    # features = decorations # delta theme
    navigate = true    
    light = false      
    side-by-side = true  
    line-numbers = true   
[delta "interactive"]
    keep-plus-minus-markers = true
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
[url "git@github.com:"]
	insteadOf = https://github.com/
[alias]
  # source: https://github.com/dlvhdr/dotfiles/blob/main/.config/git/config
  # General
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
  clean-branches = !git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -D
  branches = branch --sort=-authordate
  stashes = stash list
  remotes = remote -v
  main = master
  
  # Preferred git log view
  lg = log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset) %C(white)%s%C(reset) %C(dim white)-%C(reset) %ar %C(dim white)<%an>%C(reset)%C(auto)%d%C(reset)%n' --all --stat
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(yellow)%h%C(reset) %C(white)%s%C(reset) %C(dim white)-%C(reset) %ar %C(dim white)<%an>%C(reset)%C(auto)%d%C(reset)' --all

  # Delete local branches that no longer exist on the remote
  gone = !git fetch -p && git branch -vv | grep 'origin/.*: gone]' | awk '{print $1}' | xargs git branch -D/toky