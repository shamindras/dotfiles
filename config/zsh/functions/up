#!/bin/zsh

##? up - quickly go up any number of directories
##?
##? usage:
##?   up [<num>]

up() {
  [[ "$1" == "-h" || "$1" == "--help" ]] && { grep "^##?" "${(%):-%x}" | cut -c 5-; return 0; }

  local parents="${1:-1}"
  if [[ ! "$parents" -gt 0 ]]; then
    echo >&2 "usage: up [<num>]"
    return 1
  fi

  local dotdots=".."
  while (( --parents )); do
    dotdots+="/.."
  done
  cd "$dotdots" || return
}

# vim: ft=zsh
